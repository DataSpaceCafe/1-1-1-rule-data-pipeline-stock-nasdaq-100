# === Pipeline ===
PIPELINE_TIMEZONE=Asia/Bangkok
OUTPUT_DIR=data
OUTPUT_BASENAME=nasdaq100_latest.csv
WRITE_DATED_COPY=true

# ค่าคัดแยกมูลค่า (เทียบกับราคายุติธรรม)
# undervalued ถ้า price <= fair_value * UNDERVALUED_THRESHOLD
# overvalued ถ้า price >= fair_value * OVERVALUED_THRESHOLD
UNDERVALUED_THRESHOLD=0.90
OVERVALUED_THRESHOLD=1.10

# === Valuation Hunter Strategy ===
# PEG Ratio ต้องน้อยกว่า PEG_MAX
PEG_MAX=1.0
# P/E Ratio ไม่สูงเกินไปเทียบกับ median ของ sector
# เกณฑ์ = trailing_pe <= sector_median_pe * PE_SECTOR_MAX_MULT
PE_SECTOR_MAX_MULT=1.0
# Margin of Safety ขั้นต่ำ (0.0 = ต้องต่ำกว่ามูลค่าที่แท้จริง)
MARGIN_OF_SAFETY_MIN=0.0

# แหล่งรายชื่อ Nasdaq-100
USE_WIKIPEDIA_TICKERS=true
TICKER_FALLBACK_FILE=data/nasdaq100_tickers.csv

# === Google Drive ===
UPLOAD_TO_DRIVE=true
GOOGLE_DRIVE_AUTH_MODE=oauth
GOOGLE_OAUTH_CLIENT_FILE=config/credentials.json
GOOGLE_OAUTH_TOKEN_FILE=config/oauth_token.json
GOOGLE_DRIVE_CONVERT_TO_SHEETS=true
GOOGLE_SERVICE_ACCOUNT_FILE=config/service_account.json
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_FILE_NAME=nasdaq100_valuations.csv
GOOGLE_DRIVE_FILE_ID=

# === Logging ===
LOG_DIR=data/logs
LOG_FILE_PREFIX=nasdaq100_pipeline
UPLOAD_LOG_TO_DRIVE=true
